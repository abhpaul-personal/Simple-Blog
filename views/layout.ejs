<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <title>Simple Blog</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Simple Blog</a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/post/new">New Post</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-3">
                <ul class="list-group">
                    <% posts.forEach(post => { %>
                        <li class="list-group-item">
                            <a href="/post/<%= post.id %>"><%= post.title %></a>
                        </li>
                    <% }) %>
                </ul>
            </div>
            <div class="col-9">
                <% if (content === "index") { %>
                    <%- include("index.ejs") %>
               <% } else if (content === "new-post") { %>
                    <%- include("new-post.ejs") %>
               <% }  else if (content === "view-post") { console.log(post);%>
                    <%- include("view-post.ejs", {post} ) %>
              <% }  else if (content === "edit-post") { console.log(post);%>
                <%- include("edit-post.ejs", {post} ) %>
              <% } %>
                
            </div>
        </div>
    </div>
</body>
</html>